<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
                <form action="/task/edit/{{task._id}}" method="post">
                <h1>Update a Task</h1>
                    <div class="mb-3">
                        <input type="text" name="title" placeholder="title" value="{{ task.title }}"
                            class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        <textarea name="description" rows="3" placeholder="type a description"
                        class="form-control rounded-0 bg-dark text-white">{{task.description}}</textarea>
                    </div>
                    <button class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>